template(name="creationForm")
	form
		div.form-group
			label(for="mailDest") Destination email
			input(type="email", class="form-control", placeholder="Enter email")#mailDest
		div.dropdown
			button(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="true").btn.btn-primary.dropdown-toggle#month-menu #{currentMonth}
				span.caret
			ul(aria-labelledby="month-menu").dropdown-menu
				each monthsAvailable
					li
						a(href="#")#month-item= month
		div
			textarea#textDay=currentDayForm.text
		div.btn.btn-success#save-day click to save the text day
